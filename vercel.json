{
  "version": 2,
  "name": "biztras-cloud",
  "builds": [
    {
      "src": "biztras-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "biztras-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/biztras-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/biztras-frontend/$1"
    }
  ]
}